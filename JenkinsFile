pipeline {
    agent any
    environment {
        RELEASE='20.04'
    }

    stages {
        stage('Build') {
            environment {
                LOG_LEVEL='INFO'
            }
            parallel{
                stage('linux-arm64'){
                    steps {
                        echo "Building release ${RELEASE} for ${STAGE_NAME} with log level ${LOG_LEVEL}"
                    }
                }
                stage('linux-amd64'){
                    steps {
                        echo "Building release ${RELEASE} for ${STAGE_NAME} with log level ${LOG_LEVEL}"
                    }
                }
                stage('windows-arm64'){
                    steps {
                        echo "Building release ${RELEASE} for ${STAGE_NAME} with log level ${LOG_LEVEL}"
                    }
                }
            }
        }
        stage('Test') {
            steps {
                echo "Testing release ${RELEASE}"
            }
        }
        stage('Deploy') {
            input {
                message 'Deploy?'
                ok "Yes"
                abort "No"
                parameters {
                    string(
                        name: 'TARGET_ENV',
                        defaultValue: 'PROD',
                        description: 'Target deployment environment')
                }
            }
            steps {
                echo "Deploying release ${RELEASE} to environment ${TARGET_ENV}"
            }
        }
    }
    post {
        always {
            echo "Always is executed regardless of whatever happens."
        }
        failed {
            echo "Failed"
        }
        success {
            echo "Success"
        }
    }
}